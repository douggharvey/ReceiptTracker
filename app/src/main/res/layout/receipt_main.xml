<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ReceiptActivity">
    <!-- consider changing to constraint layout to handle fab correctly
    also may consider a viewpager as main entrance like smartreceipts
    consider scrolling especially for landscape
    -->
    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/iv_pdf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <!-- remove later -->
    <com.douglasharvey.receipttracker.activities.GraphicOverlay
        android:id="@+id/graphic_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/receipt_details" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:tint="@android:color/white"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_add" />

</android.support.design.widget.CoordinatorLayout>