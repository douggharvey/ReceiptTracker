<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ReceiptActivity">
    <!-- consider changing to constraint layout to handle fab correctly
    also may consider a viewpager as main entrance like smartreceipts
    consider scrolling especially for landscape
    -->
    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCCCCCCC"
        android:clipToPadding="false" />

    <!-- remove later -->
    <com.douglasharvey.receipttracker.activities.GraphicOverlay
        android:id="@+id/graphic_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/receipt_details" />

</android.support.design.widget.CoordinatorLayout>